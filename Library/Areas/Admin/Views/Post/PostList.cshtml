@using Library.Models.Models
@model List<Post>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Post List</h2>
        </div>
        <div class="col-6 text-end">
            <!--Controller e o action é o metodo-->
            <a asp-controller="Book" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Register New Post
            </a>
        </div>
    </div>
    <table id="myTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>PublishDate</th>
                <th>LastEdited</th>
                <th></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/post.js"></script>
}